@model BlogSpot.Models.ListViewModel

@{
    ViewBag.Title = "List";
}

<div class="posts-controll-panel">
        <ul class="controlls-list">
            <li>
                <a class="btn btn-primary" href="/#!/newpost">New post</a>
            </li>
        </ul>
</div>
<div>
    <div id="content">
        @if (Model.Posts.Count > 0)
        {
            foreach (var post in Model.Posts)
            {
                @Html.Partial("_PostTemplate", post)
            }
        }
        else
        {
            <p>No posts found!</p>
        }
    </div>

    <div class="right-side-content">Some content goes here</div>
</div>

