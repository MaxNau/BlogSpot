@model BlogSpot.Models.ListViewModel

@{
    ViewBag.Title = "List";
}

<div id="content">

    <h1>@ViewBag.Title</h1>

    @if (Model.Posts.Count > 0)
    {
        foreach (var post in Model.Posts)
        {
            @Html.Partial("_PostTemplate", post)
        }
    }
    else
    {
        <p>No posts found!</p>
    }
</div>

<div class="right-side-content">Some content goes here</div>

