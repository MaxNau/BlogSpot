@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" type="text/css"
          href="~/Content/Site.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/require.js"></script>
    <script src="~/Scripts/main.js"></script>
</head>

<body>
    <div id="main" ng-controller="mainController">
        <!-- Header -->
        <div id="header" ng-mouseover="thunder()" ng-mouseleave="stopThunder()">
            <div id="logo">
                <div id="logo_text">
                    <h1 id="logo_header">
                        <span id="g" class="flickering-effect"></span>
                        <span id="o"></span>
                        <span id="v"></span>
                        <span id="e"></span>
                        <span id="r"></span>
                        <span id="n"></span>
                        <span id="o2"></span>
                        <span id="r2"></span>
                    </h1>
                </div>
            </div>

            <!-- Navigation -->
            <div id="menubar">
                <ul id="menu">
                    <li><a href="/#!/posts">Posts</a></li>
                    <li><a href="/#!/contact">Contact</a></li>
                    <li><a href="/#!/about">About</a></li>
                </ul>
            </div>

        </div>

        <div class="lightning smoke"></div>

        <!-- Site Content -->

        <div id="site_content" ng-view> </div>

        <!-- Footer -->
        <div id="footer">
            Copyright @DateTime.Now.Year (c) BlogSpot All Rights Reserved
        </div>
    </div>
</body>
</html>

