@model BlogSpot.DAL.Entities.Post
@using BlogSpot.Extensions;

<article class="post">
    <div>
        <!--Heading-->
        <div class="post-title">
            <h2>@Html.PostLink(Model)</h2>
        </div>

        <div>
            <!--Category-->
            <div class="post-category">
                <span>Category: </span>@Html.CategoryLink(Model.Category)
            </div>

            <!--Tags-->
            <div class="post-tags">
                <span>Tags:</span>@*@Helpers.Tags(Html, Model.Tags)*@
            </div>

            <!--Posted date-->
            <div>
                @*@Model.PostedOn.ToConfigLocalTime()*@
            </div>

        </div>

    </div>

    <!--Short Description-->
    <div class="post-body row">
        <div class="col-lg-4">
            <img style="width:100%; height:100%" src="https://www.w3schools.com/w3images/fjords.jpg" />
        </div>
        <div class="col-lg-8">
            @Html.Raw(Model.ShortDescription)
        </div>
    </div>

    <div class="post-footer" align="right">
        @Html.ActionLink("continue...", "post", "blog",
        new
        {
            year = Model.PostedOn.Year,
            month = Model.PostedOn.Month,
            day = Model.PostedOn.Day,
            title = Model.Slug
        },
        new { title = "continue..." }
    )
    </div>
</article>