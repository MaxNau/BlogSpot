@model BlogSpot.DAL.Entities.Post
@using BlogSpot.Extensions;

<article class="post" ng-repeat="post in posts">
    <div>
        <!--Heading-->
        <div class="post-title">
            <h2>@Html.PostLink(Model)</h2>
        </div>

        <div>
            <!--Category-->
            <div class="post-category">
                <span>Category: </span><a href="@Url.Action("Info","Details")?category={{ post.Category.Slug }}">{{ post.Category.Slug }}</a>
            </div>

            <!--Tags-->
            <div class="post-tags">
                <span>Tags:</span>
                <ul class="tags">
                    <li class="tag" ng-repeat="tag in post.Tags">
                        <a href="@Url.Action("Info","Details")?category={{ tag.Slug }}">{{ tag.Slug }}</a>
                    </li>
                </ul>
            </div>

            <!--Posted date-->
            <div>
                {{ post.PostedOn }}
            </div>

        </div>

    </div>

    <!--Short Description-->
    <div class="post-body row">
        <div class="col-lg-4">
            <img style="width:100%; height:100%" src="https://www.w3schools.com/w3images/fjords.jpg" />
        </div>
        <div class="col-lg-8">
            {{ post.ShortDescription }}
        </div>
    </div>

    <div class="post-footer" align="right">
        <a ng-href="/#!/post/{{ post.PostedOnYear }}/{{ post.PostedOnMonth }}/{{ post.PostedOnDay }}/{{ post.Slug }}">continue...</a>
    </div>
</article>